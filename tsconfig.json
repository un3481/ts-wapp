{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir":"./dist",
    "baseUrl": "./",
    "paths": {}
  },
  "include": ["**/*.ts",],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
